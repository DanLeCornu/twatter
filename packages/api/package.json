{
  "private": true,
  "name": "@twatter/api",
  "version": "1.0.0",
  "main": "src/index.ts",
  "license": "MIT",
  "scripts": {
    "start": "pnpm with-env node -r @swc-node/register src/index.ts",
    "dev": "pnpm with-env tsnd --respawn --transpile-only --no-notify --ignore-watch node_modules src/index.ts",
    "watch": "pnpm with-env tsnd --respawn --transpile-only --no-notify --ignore-watch node_modules src/index.ts",
    "work": "pnpm with-env ts-node src/workers.ts",
    "serve": "pnpm with-env node dist/index.js",
    "build": "pnpm with-env rm -rf dist && tsc --build",
    "with-env": "dotenv -e ../../.env --",
    "hooks": "pnpm hooks:bv",
    "typecheck": "tsc --noEmit",
    "lint:fix": "eslint --fix --config .eslintrc.commit.js --cache --ext .ts,.tsx src",
    "lint": "eslint --cache --ext .ts,.tsx src",
    "prettier:fix": "prettier --ignore-path ../../.prettierignore --write './src/**/*.ts'",
    "pre-commit": "lint-staged"
  },
  "dependencies": {
    "@apollo/server": "^4.0.0",
    "@react-email/render": "^0.0.7",
    "@sentry/node": "7.56.0",
    "@sentry/tracing": "7.56.0",
    "@twatter/database": "*",
    "@twatter/emails": "*",
    "apollo-server-core": "^3.12.0",
    "apollo-server-errors": "^3.3.1",
    "apollo-server-express": "^3.12.0",
    "apollo-server-types": "^3.8.0",
    "aws-sdk": "2.1388.0",
    "bcryptjs": "2.4.3",
    "chalk": "4.1.2",
    "class-transformer": "0.5.1",
    "class-validator": "0.14.0",
    "dayjs": "1.11.8",
    "dotenv": "16.3.1",
    "dotenv-cli": "^7.1.0",
    "express": "4.18.2",
    "express-jwt": "^8.4.1",
    "express-unless": "2.1.3",
    "glob": "10.3.0",
    "graphql": "16.6.0",
    "graphql-fields": "2.0.3",
    "graphql-scalars": "1.22.2",
    "jsonwebtoken": "9.0.0",
    "morgan": "1.10.0",
    "nodemailer": "^6.8.0",
    "pg": "8.11.0",
    "reflect-metadata": "0.1.13",
    "resend": "^1.1.0",
    "routing-controllers": "0.10.4",
    "tslib": "^2.5.3",
    "type-graphql": "2.0.0-beta.2",
    "typedi": "0.10.0"
  },
  "devDependencies": {
    "@swc-node/register": "1.6.6",
    "@types/bcryptjs": "2.4.2",
    "@types/express": "4.17.17",
    "@types/graphql-fields": "1.3.5",
    "@types/jsonwebtoken": "9.0.2",
    "@types/morgan": "1.9.4",
    "@types/node": "18.16.18",
    "@types/nodemailer": "^6.4.6",
    "ts-node": "10.9.1",
    "ts-node-dev": "2.0.0"
  }
}
